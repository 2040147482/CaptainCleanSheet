# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-or-anon-key

# Server-only Supabase service role key (do NOT expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Plugin auth & permissions
PLUGIN_JWT_SECRET=replace-with-a-strong-random-secret
PLUGIN_TOKEN_TTL_MINUTES=15
PLUGIN_JWT_TTL_SECONDS=3600

# Creem (billing)
CREEM_API_KEY=replace-with-your-creem-api-key
CREEM_WEBHOOK_SECRET=replace-with-your-creem-webhook-secret

# Optional: Creem API base
# Use https://test-api.creem.io in test mode
CREEM_API_BASE=https://test-api.creem.io

# Optional: price/product IDs for server-side allowlist (prefer these specific IDs)
# Example values below are placeholders; fill with your real IDs
CREEM_PRICE_PRO_MONTHLY_ID=
CREEM_PRICE_PRO_TEAM_ID=

# Optional: default paths when none provided on checkout creation (will be joined with origin)
# Using path join (e.g., new URL(CREEM_DEFAULT_SUCCESS_PATH, origin))
CREEM_DEFAULT_SUCCESS_PATH=/profile
CREEM_DEFAULT_CANCEL_PATH=/profile
